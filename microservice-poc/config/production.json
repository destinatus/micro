{
  "server": {
    "port": 3001,
    "instanceId": "${INSTANCE_ID}"
  },
  "microservice": {
    "port": "${MICROSERVICE_PORT}",
    "host": "${MICROSERVICE_HOST}"
  },
  "database": {
    "postgres": {
      "host": "${POSTGRES_HOST}",
      "port": "${POSTGRES_PORT}",
      "user": "${POSTGRES_USER}",
      "password": "${POSTGRES_PASSWORD}",
      "database": "${POSTGRES_DB}"
    }
  },
  "sync": {
    "interval": 10000,
    "retryAttempts": 5,
    "retryDelay": 2000
  },
  "logging": {
    "level": "info",
    "sql": false
  }
}
